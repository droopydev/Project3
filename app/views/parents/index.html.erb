
<% if notice != nil %>
<div class="alert alert-info alert-dismissible fade show" role="alert">
  <strong><p id="notice"><%= notice %></p></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<%end%>

<div class="row">
    <div class="col-3 div1">

      <h3><b>Welcome, <%= @parent.salutation %> <%= @parent.name %></b></h3> 

    <br/>
    
    <h4>Contact Details &nbsp; <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_parent_path(@parent) %></h4> 
      
      <table>   
        <tbody>
            <tr><td>Salutation: <%= @parent.salutation %></td></tr>
            <tr><td>Name: <%= @parent.name %></td></tr>
            <tr><td>Contact: <%= @parent.contact_no %></td></tr>      
        </tbody>
        
      </table>
      
    </div>
    <div class="col-7 div2">
    <br/>
    <h3><b><i class="fa fa-book" aria-hidden="true"></i></b> Open Courses </h3>

    <div class="row">

      <% @courses.each do |course| %>
      <div class="col-4">
      <div class="card" style="width: 15rem;">
      
      <img class="card-img-top" src="<%= course.avatar %>" alt="Card image cap">
      <div class="card-body">
        
        <b><h5 class="card-title"><%= course.course_name %></h5></b>
        <p class="card-text"><%= course.description %></p>
      </div>
      <div class="card-body">
        <span class="card-text"><%= course.credits %> credits</span>
        <span class="card-text float-right"><%= course.category %></span>
      </div>
      </div> 
      </div>
      <% end %>
       
      </div>      

    </div>
    </div>


</div>















