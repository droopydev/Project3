
<% if notice != nil %>
<div class="alert alert-info alert-dismissible fade show" role="alert">
  <strong><p id="notice"><%= notice %></p></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<%end%>

<div class="row">
    <div class="col-3 div1">

      <h3><b>Welcome, <%= @parent.salutation %> <%= @parent.name %></b></h3> 

    <br/>
    
    <h4>Contact Details &nbsp; <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_parent_path(@parent) %></h4> 
      
      <table>   
        <tbody>
            <tr><td>Salutation: <%= @parent.salutation %></td></tr>
            <tr><td>Name: <%= @parent.name %></td></tr>
            <tr><td>Contact: <%= @parent.contact_no %></td></tr> 
            <tr><td>&nbsp;</td></tr> 
            <tr><td><a href=<%= courses_path %> class="btn btn-primary btn-md">Find a Course</a>&nbsp;<a href=<%= centres_path %> class=" btn btn-primary btn-md">Find a Centre</a></tr></td>
   
        </tbody>
        
      </table>
      
    </div>
    <div class="col-7 div2">
    <h3><b><i class="fa fa-book" aria-hidden="true"></i></b> Your child is enrolled in the these courses </h3>
      
        <% @carts.each_with_index do |item, index| %>
           
            <div class="card">
              <img class="card-img-top" src="<%= @courses.find_by(id: item.course_id).avatar %>" alt="Card image cap">

              <div class="card-body">
                <p>Course #: <%= index+1 %></p><br>      
                <p class="card-text">Venue: <%= @centres.find_by(id: item.centre_id).centre_name %></p>
                <p class="card-title">Class: <%= @courses.find_by(id: item.course_id).course_name %></p>
                <span class="card-text float-right"><%= link_to 'Delete', delete_cart_path(item), method: :delete, data: {confirm: 'Are you sure?'} %><br></span>
              </div>
            </div>
        <% end %>

</div>















