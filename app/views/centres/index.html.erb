<h1>Centre Index</h1>

<% @centres.each do |centre| %>
<div class="card" style="width: 30rem;">
  <% unless centre.avatar_url.nil? %><%= image_tag centre.avatar_url(:display) %><% end %> 
  <div class="card-body">
    <h5 class="card-title"><%= centre.centre_name%></h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href=<%= tuition_path(centre) %> class="btn btn-info">Preview</a>
    <a href=<%= edit_tuition_path(centre) %> class="btn btn-warning">Edit</a>
    <%= link_to 'Delete', tuition_path(centre),
        method: :delete,
        data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>

<% end %>
