<h1>Centres Index</h1>


<% if @centres.empty? %>
  No Centres Found
<% else %>
<div>
<div class="filtergrp">
  <button class="btn btn-primary openclose" id="filteragebtn">Age Group</button>
  <div class="form-popup" id="filterage">
  <input class="filterage" type="checkbox" value='North'>North</input><br>
  <input class="filterage" type="checkbox" value='South'>South</input><br>
  <input class="filterage" type="checkbox" value='East'>East</input><br>
  <input class="filterage" type="checkbox" value='West'>West</input><br>
  <button class="btn btn-primary filterage">Filter!</button>

    </div>
</div>
</div>
<% @centres.each do |centre| %>

  <div class="card" style="width: 30rem;">
    <% unless centre.avatar_url.nil? %><%= image_tag centre.avatar_url(:display) %><% end %> 
    <div class="card-body">
      <h5 class="card-title"><%= centre.centre_name%></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href=<%= centre_path(centre) %> class="btn btn-info">Preview</a>
      <% if user_signed_in? %>
        <a href=<%= edit_centre_path(centre) %> class="btn btn-warning">Edit</a>
        <%= link_to 'Delete', centre_path(centre),
            method: :delete,
            data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
    </div>
  </div>
  
   <% end %>
  
<% end %>

<p>
<% if user_signed_in? %>
<%= link_to 'Back', dashboard_path %>

<% else %> 

<%= link_to 'Back', root_path %>

<% end %>
</p>