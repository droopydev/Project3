<div class="form-main-wrapper">
<h1>New Centre </h1>
		<%= form_with scope: :centre, url: centres_path, local: true do |form| %>
	<div class="form-input-wrapper">
			<div class="form-right">
				<ul>
					<li>
				    <%= label_tag(:centre_name, "Centre Name") %>
				    <%= form.text_field :centre_name, placeholder: "E.g. ABC Nursery" %>
				  </li>
				  <li>
				    <%= label_tag(:reg_no, "Registration No.") %>
			      <%= form.text_field :reg_no %>
			    </li>
			    <li>
						<%= label_tag(:location, "Location") %>
				    <!-- <%= form.text_field :location %> -->
				    <%= form.select :location, ['North', 'South', 'East', 'West'] %>
				  </li>
				  <li>
			      <%= label_tag(:contact_no, "Contact No.") %>
				    <%= form.text_field :contact_no %>
				  </li>
				  <li class="form-description">
				    <%= label_tag(:description, "Description", :class => "label-description") %>
				    <%= form.text_area :description %>
				  </li>
			  </ul>
		  </div>
			<div class="form-left">
		    <%= form.file_field :avatar %>
		  </div>
	</div>
		  <%= form.submit(:class => "button-submit") %>
	<% end %>
</div>


