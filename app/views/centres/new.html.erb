<h1>New Centre Form </h1>
<%= form_with scope: :centre, url: centres_path, local: true do |form| %>
    <p>
      Centre Name
      <%= form.text_field :centre_name, placeholder: "E.g. ABC Nursery" %>
    </p>
    <p>
      Business Registration No.
      <%= form.text_field :reg_no %>
    </p>
    <p>
      Contact No
      <%= form.text_field :contact_no %>
    </p>
    <p>
      Location
      <%= form.text_area :location %>
    </p>
    <p>
      Description
      <%= form.text_area :description %>
    </p>
    <p>
    Offers Course(s): 
 <%= form.collection_check_boxes :course_ids, @courses, :id, :course_name %><br>
 </p>
  
    <%= form.file_field :avatar %>

    <p>
      <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', root_path %>
