<h1>New Course Form </h1>
<%= form_with scope: :course, url: courses_path, local: true do |form| %>
    <p>
      Course Name
      <%= form.text_field :course_name, placeholder: "E.g. Advanced Abacus" %>
    </p>
    <p>
      Description
      <%= form.text_area :description %>
    </p>
    <p>
      Age
      <%= form.text_field :age %>
    </p>
    <p>
      Category
      <%= form.text_field :category %>
    </p>
    <p>
      Credits
      <%= form.text_field :credits %>
    </p>
    <p>
       Offered @ 
    <%= form.collection_check_boxes :centre_ids, @centres, :id, :centre_name %><br>
    </p>
      <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', root_path %>
