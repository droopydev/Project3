<% if @course.errors.any? %>
<div class="alert alert-danger">
  <strong>Oh no!</strong>  
  <%= @course.errors.full_messages.join("; ")  %>
</div>
<% end %>

<h1>Edit Course Particulars</h1>

<%= form_with scope: :course, model: @course, local: true do |form| %>

  <p>
    Course Name
    <%= form.text_field :course_name, :value => @course.course_name, :required => true%>
  </p>
  <p>
    Description
    <%= form.text_area :description, :value => @course.description, :required => true, :maxlength =>"150" %>
  </p>
  
  <p>
      Age
      <%= form.text_field :age, :value => @course.age, :required => true %>
    </p>
    <p>
     Category
      <%= form.text_field :category, :value => @course.category, :required => true %>
    </p>
    <p>
      Credits
      <%= form.text_field :credits, :value => @course.credits, :required => true %>
    </p> 
    <p>Offered @
    <%= form.collection_check_boxes :centre_ids, @centres, :id, :centre_name %>
    </p>

    <%= form.file_field :avatar %>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', dashboard_path %>